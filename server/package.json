{
  "name": "spexture-com-server",
  "version": "1.0.0",
  "description": "REST API server for Spexture-com application",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage; node ../scripts/generate-coverage-markdown.js server",
    "migrate": "node src/database/migrate.js",
    "status": "curl -s http://localhost:3001/health 2>/dev/null && echo '✓ Server is running' || echo '✗ Server is not responding'"
  },
  "keywords": [
    "express",
    "rest",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  }
}
