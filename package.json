{
  "name": "spexture-com",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.21.1",
    "react-scripts": "5.0.1",
    "react-toastify": "^11.0.5",
    "remark-gfm": "^4.0.1",
    "web-vitals": "^2.1.4",
    "yup": "^1.3.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "NODE_OPTIONS='--no-deprecation' react-scripts test",
    "test:coverage": "NODE_OPTIONS='--no-deprecation' react-scripts test --coverage --watchAll=false; node scripts/generate-coverage-markdown.js client; cd coverage-reports && pandoc -s --metadata title=\"Client Coverage Report\" -c \"data:text/css,table{border-collapse:collapse;width:100%}th,td{border:1px solid \\#ddd;padding:8px 12px;text-align:left}th{background:\\#1a1a2e;color:white}tr:nth-child(even){background:\\#f9f9f9}code{background:\\#e8e8e8;padding:2px 6px;border-radius:4px}\" client-coverage.md -o client-coverage.html || echo 'Pandoc not installed - HTML generation skipped'",
    "test:integration": "./scripts/ensure-docker-services.sh && NODE_OPTIONS='--no-deprecation' SPEXTURE_APP_API_URL=${SPEXTURE_APP_API_URL:-http://localhost:3011/api} react-scripts test --setupFilesAfterEnv=./src/setupTests.integration.js --testMatch='**/*.integration.test.js' --watchAll=false",
    "test:integration:watch": "./scripts/ensure-docker-services.sh && NODE_OPTIONS='--no-deprecation' SPEXTURE_APP_API_URL=${SPEXTURE_APP_API_URL:-http://localhost:3011/api} react-scripts test --setupFilesAfterEnv=./src/setupTests.integration.js --testMatch='**/*.integration.test.js'",
    "test:all": "npm test -- --watchAll=false && npm run test:integration",
    "test:e2e": "./scripts/test-e2e-setup.sh",
    "eject": "react-scripts eject",
    "check-ports": "./scripts/check-ports.sh",
    "start:services": "./scripts/start-services.sh up --build",
    "start:services:detached": "./scripts/start-services.sh up -d --build",
    "stop:services": "./scripts/stop-services.sh",
    "clean:docker": "./scripts/clean-docker.sh",
    "db:init": "./scripts/init-database.sh",
    "db:migrate": "./scripts/run-migration.sh",
    "db:migrate:001": "./scripts/run-migration.sh 001",
    "db:start": "docker compose up -d postgres",
    "db:stop": "docker compose stop postgres",
    "db:restart": "docker compose restart postgres",
    "db:status": "docker compose ps postgres",
    "db:logs": "docker compose logs -f postgres",
    "db:shell": "docker compose exec postgres psql -U ${SPEXTURE_POSTGRES_USER:-spexture_user} -d ${SPEXTURE_POSTGRES_DB:-spexture_com}",
    "db:admin": "docker compose exec postgres psql -U ${SPEXTURE_POSTGRES_USER:-spexture_user} -d ${SPEXTURE_POSTGRES_DB:-spexture_com} -c \"SELECT email, role, name, is_active, created_at FROM users WHERE role = 'admin';\"",
    "server:restart": "./scripts/restart-server.sh",
    "server:stop": "lsof -ti:${SPEXTURE_SERVER_PORT:-3011} | xargs kill -9 2>/dev/null && echo '✓ Server stopped' || echo '✗ No server running on port ${SPEXTURE_SERVER_PORT:-3011}'",
    "server:dev": "cd server && npm run dev",
    "server:status": "curl -s http://localhost:${SPEXTURE_SERVER_PORT:-3011}/health 2>/dev/null && echo '✓ Server is running' || echo '✗ Server is not responding'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "node-fetch": "^2.7.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "coverageReporters": [
      "json",
      "json-summary",
      "lcov",
      "text",
      "clover"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js",
      "!src/components/TestingCoverage.js",
      "!src/**/*.test.{js,jsx}",
      "!src/**/__tests__/**",
      "!src/**/__mocks__/**"
    ]
  }
}
