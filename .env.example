# ========================================
# React Super App - Environment Configuration
# ========================================
# Copy this file to .env and customize for your environment
# DO NOT commit .env to version control!

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
POSTGRES_USER=superapp_user
POSTGRES_PASSWORD=superapp_password
POSTGRES_DB=react_super_app
POSTGRES_PORT=5432

# ========================================
# Server Configuration (Express.js)
# ========================================
SERVER_PORT=3001
NODE_ENV=development
# Options: development, production, test

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
# ⚠️ CRITICAL: Change JWT_SECRET in production to a strong random string!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_EXPIRES_IN=24h
# Options: 1h, 24h, 7d, 30d

# ========================================
# Client Configuration (React)
# ========================================
CLIENT_PORT=3000
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_ENV=development
# Options: development, production, test

# Dev Auto-fill Admin Credentials
# Used by Ctrl+Shift+A (Cmd+Shift+A on Mac) keyboard shortcut on login page
REACT_APP_ADMIN_EMAIL=your-admin-email@example.com
REACT_APP_ADMIN_PASSWORD=your-admin-password

# ========================================
# Optional: Advanced Configuration
# ========================================
# DB_HOST=localhost
# DB_POOL_MIN=2
# DB_POOL_MAX=10
# CORS_ORIGIN=http://localhost:3000
# LOG_LEVEL=info
